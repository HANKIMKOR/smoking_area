<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:id="@+id/v_banner"
        android:layout_width="312dp"
        android:layout_height="85dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/background_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_place_name"
        tools:text="롯데백화점 건대스타시티점"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:textSize="12sp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/v_banner"
        app:layout_constraintTop_toTopOf="@id/v_banner" />

    <TextView
        tools:text="서울특별시 광진구 아차산로 272(자양동)"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/tv_place_address"
        android:layout_width="200dp"
        android:textSize="10sp"
        android:layout_height="16dp"
        app:layout_constraintStart_toStartOf="@id/tv_place_name"
        app:layout_constraintTop_toBottomOf="@id/tv_place_name" />

    <TextView
        android:id="@+id/tv_place_search"
        android:gravity="center"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/background_blue"
        app:layout_constraintEnd_toEndOf="@id/v_banner"
        android:text="길찾기"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/v_banner"/>


</androidx.constraintlayout.widget.ConstraintLayout>